#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<WortGame>:    
    ball: pong_ball   
    player: player_1

    Image:
        source: 'Wort.png'
        size: root.width / 1.25, root.height / 1.25
        x: root.width / 10
        y: root.height / 8

    PongBall:
        id: pong_ball
        center: self.parent.center

    Paddle:
        id: player_1
        x: root.width / 2
        y: root.y
